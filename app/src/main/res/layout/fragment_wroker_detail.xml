<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"/>
            </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/box_name"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/first_name_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:ellipsize="start"
            android:layout_height="wrap_content"
            android:text="first name: "/>
        <TextView
            android:id="@+id/first_name_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Ramón Pérez"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/box_las_name"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/last_name_title"
            android:layout_width="0dp"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="start"
            android:layout_height="wrap_content"
            android:text="last name: "/>
        <TextView
            android:id="@+id/last_name_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            tools:text="Ramón Pérez"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/age_box"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/age_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:maxLines="1"
            android:ellipsize="start"
            android:layout_height="wrap_content"
            android:text="age: "/>
        <TextView
            android:id="@+id/age_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="28"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/country_box"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/country_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="start"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="country: "/>
        <TextView
            android:id="@+id/country_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Spain"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/profession_box"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profession_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="start"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="Profession: "/>
        <TextView
            android:id="@+id/professison_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Architect"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gender_box"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gender_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="start"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="Gender: "/>
        <TextView
            android:id="@+id/gender_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            tools:text="Male"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/height_box"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/height_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="start"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="Height: "/>
        <TextView
            android:id="@+id/height_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:ellipsize="end"
            tools:text="178 cm"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/favorite_box"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/favorite_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="start"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="Favorite: "/>
        <TextView
            android:id="@+id/favorite_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            tools:text="Ice-cream"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quota_box"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/quota_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="start"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="Quota: "/>
        <TextView
            android:id="@+id/quota_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            tools:text="Unknow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_box"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/email_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="start"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="Email: "/>
        <TextView
            android:id="@+id/email_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            tools:text="user@email.com"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_box"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Description"/>
        <TextView
            android:paddingHorizontal="8dp"
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            tools:text="Lorem ipsum dolor sit amet, "/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>